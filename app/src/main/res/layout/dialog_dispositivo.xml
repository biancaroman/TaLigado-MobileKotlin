<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="start">

    <!-- Imagem da dispositivo -->
    <ImageView
        android:id="@+id/dialogImgDispositivo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/iconEditarDispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"/>

    <!-- Nome da dispositivo -->
    <TextView
        android:id="@+id/dialogNomeDispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Dispositivo"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="8dp"/>


    <!-- Status da dispositivo -->
    <TextView
        android:id="@+id/dialogStatusDispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <!-- Consumo de Energia da dispositivo -->
    <TextView
        android:id="@+id/dialogConsumoEnergiaDispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consumo de Energia"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <!-- Botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Botão de Remover Dispositivo -->
        <Button
            android:id="@+id/btnRemoverDispositivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remover Dispositivo"
            android:textColor="@color/black" />

        <!-- Botão de Ver Detalhes -->
        <Button
            android:id="@+id/btnVerDetalhesDispositivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>
